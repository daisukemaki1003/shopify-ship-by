// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

enum RuleTargetType {
  product
  all
}

enum DeliverySource {
  metafield
  attributes
}

model Rule {
  id          String         @id @default(cuid())
  shopId      String
  targetType  RuleTargetType
  targetId    String?
  days        Int
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  shippingRates RuleShippingRate[]

  @@index([shopId])
}

model RuleShippingRate {
  id               String   @id @default(cuid())
  shopId           String
  ruleId           String
  shippingRateId   String
  shippingRateShopId String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  rule          Rule        @relation(fields: [ruleId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  shippingRate  ShippingRate @relation(fields: [shippingRateShopId, shippingRateId], references: [shopId, shippingRateId], onDelete: Cascade, onUpdate: Cascade)

  @@index([shopId])
  @@index([ruleId])
  @@index([shippingRateId])
  @@unique([shopId, ruleId, shippingRateId])
}

model Holiday {
  shopId         String   @id
  holidays       Json     @default("[]")
  weeklyHolidays Json     @default("[]")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model ErrorLog {
  id        String   @id @default(cuid())
  shopId    String
  orderId   BigInt
  reason    String
  rawData   Json?
  memo      String?
  resolved  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([shopId])
  @@index([shopId, orderId])
}

model ShopSetting {
  shopId                 String          @id
  deliverySource         DeliverySource?
  deliveryKey            String?
  deliveryFormat         String?
  defaultLeadDays        Int?
  saveTag                Boolean         @default(false)
  saveTagFormat          String?
  saveNote               Boolean         @default(false)
  saveNoteFormat         String?
  saveMetafield          Boolean         @default(true)
  language               String?
  shippingRates          Json            @default("[]")
  createdAt              DateTime        @default(now())
  updatedAt              DateTime        @updatedAt
}

model Shop {
  id          String   @id
  shopDomain  String?  @unique
  accessToken String?
  scope       String?
  installedAt DateTime?
  uninstalledAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ShippingRate {
  id             String   @id @default(cuid())
  shopId         String
  shippingRateId String
  title          String
  handle         String
  zoneName       String?
  syncedAt       DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  rules RuleShippingRate[]

  @@index([shopId])
  @@unique([shopId, shippingRateId])
}
